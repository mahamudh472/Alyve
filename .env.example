# ===============================
# Django
# ===============================
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# ===============================
# Providers
# ===============================
LLM_PROVIDER=openai
STT_PROVIDER=openai
TTS_PROVIDER=elevenlabs

# ===============================
# OpenAI
# ===============================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_LLM_MODEL=gpt-5.2-chat-latest
OPENAI_STT_MODEL=gpt-4o-transcribe

# Realtime (WebSocket)
OPENAI_REALTIME_URL=wss://api.openai.com/v1/realtime?model=gpt-realtime

# ===============================
# ElevenLabs
# ===============================
ELEVENLABS_API_KEY=elevenlabs_xxxxxxxxxxxxx
ELEVENLABS_BASE_URL=https://api.elevenlabs.io
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

# Voice tuning
ELEVENLABS_PCM_SWAP_ENDIAN=0
ELEVENLABS_TTS_SPEED=1.0
ELEVENLABS_TTS_STABILITY=0.75
ELEVENLABS_TTS_SIMILARITY_BOOST=0.85
ELEVENLABS_TTS_USE_SPEAKER_BOOST=1
ELEVENLABS_TTS_STYLE=0.0

# ===============================
# Voice runtime
# ===============================
VOICE_DEBUG=0
END_OF_TURN_GRACE_MS=700
TTS_MAX_WORDS_PER_CHUNK=20
TTS_INTER_CHUNK_PAUSE_SEC=0.00

# ===============================
# Vector DB (RAG)
# ===============================
CHROMA_DIR=chroma_db

# ===============================
# Channels (WebSockets)
# ===============================
# Use "inmemory" for local dev or "redis" for prod
CHANNEL_BACKEND=inmemory

# Only required if CHANNEL_BACKEND=redis
REDIS_URL=redis://localhost:6379/0

